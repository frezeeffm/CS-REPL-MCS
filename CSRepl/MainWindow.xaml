<Window x:Class="CSRepl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSRepl"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <avalonEdit:TextEditor  Name="textEditor"
                                FontFamily="Consolas"
                                FontSize="10pt"/>
        <TextBox x:Name="codeArea" HorizontalAlignment="Left" Height="205" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" Background="White" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" BorderBrush="Black"/>

        <TextBox x:Name="inputArea" HorizontalAlignment="Left" Height="34" Margin="10,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" PreviewKeyDown= "inputAreaOnPreviewKeyDown"/>
    </Grid>
</Window>
